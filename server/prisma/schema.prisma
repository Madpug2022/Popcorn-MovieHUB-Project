// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model brands {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  img  String
  href String
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  nickname String    @unique
  email    String    @unique
  name     String
  picture  String
  movies   Movies[]
  series   Series[]
  Popcorn  Popcorn[]
}

model Movies {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  poster_image    String
  poster_image_id String
  score           Int
  critique        String
  genre           Genre  @relation(fields: [genreId], references: [id])
  User            User   @relation(fields: [userId], references: [id])
  userId          String @db.ObjectId
  genreId         String @db.ObjectId
}

model Series {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  poster_image    String
  poster_image_id String
  score           Int
  critique        String
  genre           Genre  @relation(fields: [genreId], references: [id])
  User            User   @relation(fields: [userId], references: [id])
  userId          String @db.ObjectId
  genreId         String @db.ObjectId
}

model Popcorn {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  image       String
  image_id    String
  type        String
  ingredients String[]
  user        User     @relation(fields: [userId], references: [id])
  userId      String   @db.ObjectId
}

model Genre {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String   @unique
  moviesId String?  @db.ObjectId
  seriesId String?  @db.ObjectId
  Movies   Movies[]
  Series   Series[]
}
